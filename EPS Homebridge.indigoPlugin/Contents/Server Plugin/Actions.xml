<?xml version="1.0"?>
<!-- EPS (ColoradoFourWheeler) Plugin -->
<Actions>
	<!-- Defaults to the main ColoradoFourWheeler forum on Indigo -->
	<SupportURL>http://forums.indigodomo.com/viewforum.php?f=192</SupportURL>
	
	<!-- All plugins that monitor other devices will have an update action -->
	<Action id="update" deviceFilter="self" uiPath="DeviceActions">
		<Name>Update</Name>
		<CallbackMethod>updateDevice</CallbackMethod>
	</Action>
	
	<Action id="sep_general" uiPath="DeviceActions"/>
	
	<Action id="forceOn" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Wrapper" uiPath="DeviceActions">
		<Name>Force to an On state</Name>
		<CallbackMethod>forceState</CallbackMethod>
	</Action>
	
	<Action id="forceOff" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Wrapper" uiPath="DeviceActions">
		<Name>Force to an Off state</Name>
		<CallbackMethod>forceState</CallbackMethod>
	</Action>
	
	<Action id="sep_wrappers" uiPath="DeviceActions"/>
	
	<Action id="startHomebridge" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Server" uiPath="DeviceActions">
		<Name>Start a Homebridge server</Name>
		<CallbackMethod>serverActions</CallbackMethod>
	</Action>
	
	<Action id="stopHomebridge" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Server" uiPath="DeviceActions">
		<Name>Stop a Homebridge server</Name>
		<CallbackMethod>serverActions</CallbackMethod>
	</Action>
	
	<Action id="sep_server1" uiPath="DeviceActions"/>
	
	<Action id="reloadHomebridge" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Server" uiPath="DeviceActions">
		<Name>Reload a Homebridge server</Name>
		<CallbackMethod>serverActions</CallbackMethod>
	</Action>
	
	<Action id="saveHomebridge" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Server" uiPath="DeviceActions">
		<Name>Save a Homebridge server configuration</Name>
		<CallbackMethod>serverActions</CallbackMethod>
	</Action>
	
	<Action id="sep_server2" uiPath="DeviceActions"/>
	
	<Action id="saveReloadHomebridge" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Server" uiPath="DeviceActions">
		<Name>Save a Homebridge server configuration and reload Homebridge</Name>
		<CallbackMethod>serverActions</CallbackMethod>
	</Action>
	
	<Action id="sep_server3" uiPath="DeviceActions"/>
	
	<Action id="turnonIgnore" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Alias" uiPath="DeviceActions">
		<Name>Turn on ignore mode on an Alias device</Name>
		<CallbackMethod>aliasActions</CallbackMethod>
	</Action>
	
	<Action id="turnoffIgnore" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Alias" uiPath="DeviceActions">
		<Name>Turn off ignore mode on an Alias device</Name>
		<CallbackMethod>aliasActions</CallbackMethod>
	</Action>
	
	<Action id="toggleIgnore" deviceFilter="com.eps.indigoplugin.homebridge.Homebridge-Alias" uiPath="DeviceActions">
		<Name>Toggle ignore mode on an Alias device</Name>
		<CallbackMethod>aliasActions</CallbackMethod>
	</Action>
	
</Actions>
